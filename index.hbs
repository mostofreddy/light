{{#contentFor "meta"}}

    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="{{@blog.title}}"/>
    <meta property="og:url" content="http://mostofreddy.com.ar"/>
    <meta property="og:site_name" content="{{@blog.title}}"/>
    <meta property="og:type" content="blog"/>
    <meta property="og:description" content="{{@blog.description}}" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary"/>
    <meta name="twitter:site" content="@mostofreddy"/>
    <meta name="twitter:creator" content="@mostofreddy"/>
    <meta name="twitter:description" content="{{@blog.description}}"/>
    <meta name="twitter:title" content="{{@blog.title}}"/>

{{/contentFor}}


{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}


{{! The main content area on the homepage }}
<main class="container container-main">

    {{! Each post will be output using this markup }}
    {{#foreach posts}}

    <article class="{{post_class}} clearfix">

        {{> "postheader"}}

        <section class="post-excerpt">
            <p>{{excerpt characters="300"}}&hellip;</p>
        </section>

        <a href="{{url}}" class="btn btn-sm btn-readmore pull-right" title="Continuar leyendo">Continuar leyendo <i class="fa fa-angle-right"></i></a>

    </article>

    {{/foreach}}

    {{> "paginator"}}

</main>
